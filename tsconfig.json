{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6", "es5", "dom", "es2017"],
    "moduleResolution": "node",
    "noEmit": false,
    "target": "ES5",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "vite.config.js"
  ]
}
