{
  "openapi": "3.0.2",
  "info": {
    "version": "0.1.0",
    "title": "Jenio-CodeDir-Template workflow"
  },
  "servers": [
    {
        "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/get-and-save-data": {
      "post": {
        "summary": "Save text data and return an ID",
        "description": "Receives a text in the request body and saves it on the server. Returns an ID if successful, or an error message if it fails.",
        "operationId": "getAndSaveData",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "description": "Text data to be saved."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Data saved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Unique identifier for the saved data."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error in saving data.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error_message": {
                      "type": "string",
                      "description": "Description of the failure."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/get-std-mean": {
      "post": {
        "summary": "Calculate the mean and standard deviation of numbers in an array",
        "description": "Receives a number array in the request body and calculate the mean and standard deviation. Returns an result if successful, or an error message if it fails.",
        "operationId": "getStdMean",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dataArray": {
                    "type": "array",
                    "items": {
                      "type": "number",
                      "description": "number to calculate"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Data calculation successful.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "mean": {
                      "type": "number",
                      "description": "average value"
                    },
                    "std": {
                      "type": "number",
                      "description": "standard deviation"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error in data calculation.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error_message": {
                      "type": "string",
                      "description": "Description of the failure."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/get-std-mean-r": {
      "post": {
        "summary": "Calculate the mean and standard deviation of numbers in an array",
        "description": "Receives a number array in the request body and calculate the mean and standard deviation. Returns an result if successful, or an error message if it fails.",
        "operationId": "getStdMeanR",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dataArray": {
                    "type": "array",
                    "items": {
                      "type": "number",
                      "description": "number to calculate"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Data calculation successful.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "mean": {
                      "type": "number",
                      "description": "average value"
                    },
                    "std": {
                      "type": "number",
                      "description": "standard deviation"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error in data calculation.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error_message": {
                      "type": "string",
                      "description": "Description of the failure."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {

  }
}
